@model IEnumerable<BusinessLogic.OutputModels.OutputMovies>

@{
    ViewData["Title"] = "UserShops";
}

<h1>@User.Identity.Name's shoped products</h1>


<br />
<p class="bookLink">
    <a asp-controller="UserShopedItems" asp-action="UserBooksShops" class="btn btn-primary btn-lg">Book collection</a>
</p>
<table class="table" id="tabul">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raiting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Released
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                Product
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Actors)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealeaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @{
                        var sum = item.price + item.Discount;
                        string pricy = $"{sum:f2} $";
                        string disp = $"{item.price:f2} $";
                    }
                    Origin Price: @pricy
                    <p>Promo: -@item.Discount $</p>
                    Final Price: @item.price
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.LinkForPurchasedContend)*@
                    <iframe width="420" height="315"
                            src="@item.LinkForPurchasedContend">
                    </iframe>
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Picture)*@
                    <img src="@item.Picture" id="MovieList" alt="Alternate Text" />
                </td>
            </tr>
        }
    </tbody>
</table>
