@model BusinessLogic.OutputModels.OutputMovies

@{
    ViewData["Title"] = "Purchase";
}

<h1>Purchase</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actors)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actors)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RealeaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RealeaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Picture" id="MovieList" alt="Alternate Text" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Raiting)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Raiting)
        </dd>
    </dl>
</div>
<div>
    <form asp-controller="MovieList" asp-action="PurchaseMovie" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="price" />
        <input type="submit" value="Purchase" class="btn btn-danger" />

        <button asp-controller="MovieList" asp-action="MovieCollection" type="submit" class="btn btn-primary">
            Back to movies
        </button>
    </form>
    @*@{
        Model.Raiting = 4;
    }*@
<form asp-controller="Rating" asp-action="RateMovie" method="get">
    <input type="hidden" asp-for="Id" />
    @*<input type="number" asp-for="Raiting" />*@
    <div class="form-group">
        <label asp-for="Raiting" class="control-label"></label>
        <input asp-for="Raiting" class="form-control" />
        <span asp-validation-for="Raiting" class="text-danger"></span>
    </div>
    <input type="submit" value="Rate" class="btn btn-outline-success" />
</form>
</div>
