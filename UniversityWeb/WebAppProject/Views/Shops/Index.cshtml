@model IEnumerable<Db.Models.Shops>

@{
    ViewData["Title"] = "Index";
}

<h1>View shops</h1>

<div class="table-responsive-sm">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RentedTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Books)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movie)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RentedTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Books.Id)
                        @if (item.Books != null)
                        {
                            @item.Books.Title
                        }
                        else
                        {
                            <div>-</div>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie.Id)
                        @if (item.Movie != null)
                        {
                            @item.Movie.Title
                        }
                        else
                        {
                            <div>-</div>
                        }
                    </td>
                    <td>
                        Name: @item.User.UserName
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>