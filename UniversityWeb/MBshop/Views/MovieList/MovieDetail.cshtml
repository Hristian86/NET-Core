@model MBshop.Service.OutputModels.OutputMovies

@{
    ViewData["Title"] = "Details";
}
    <div class="container">

        @if (Model.Status)
        {
            <h1>Rate</h1>
        }
        else
        {
            <h1>@ViewData["Title"]</h1>
        }

        @*<div class="jumbotron jumbotron-fluid bg-dark">
            <div class="container text-light">
                <h1 class="display-1 text-center">@Model.Title</h1>
                <p class="lead">Genre: @Model.Genre</p>
