        <div>
            <h4>Movie</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Director)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Director)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Actors)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Actors)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    Release date
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RealeaseDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Picture)
                </dt>
                <dd class="col-sm-10">
                    <img src="@Model.Picture" id="MovieList" alt="Alternate Text" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Genre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Genre)
                </dd>
                <dt class="col-sm-2">
                    Price $
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.price)
                </dd>
                <dt class="col-sm-2">
                    Rating
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Rate)
                </dd>
            </dl>
        </div>

        @if (Model.Status)
        {
            <a asp-controller="UserShopedItems" asp-action="UserMovieShops" id="back-button-a-link" class="btn btn-dark">Back to personal collection</a>
        }
        else
        {

            <div>
                <form asp-controller="Cart" asp-action="AddToCartMovie" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="price" />
                    <input type="submit" value="Add to cart @Model.price.ToString("f2") $" class="btn btn-danger ml-0" id="add-to-cart-input" />

                    <input asp-controller="MovieList" asp-action="MovieCollection" type="submit" value="Back to movies" class="btn btn-primary bg-dark ml-0" id="back-link" />
                        
                </form>
            </div>
        }

        @if (Model.Status)
        {
            <div style="display:flex;align-items: center;
  justify-content: center;">

                <form asp-controller="Rating" asp-action="RateMovie" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <input type="hidden" asp-for="Raiting" value="1" class="form-control" />
                        <span asp-validation-for="Raiting" class="text-danger"></span>
                    </div>
                    <button type="submit" id="rateStars" value="Rate 1" class="btn btn-outline-success" >Rate 1</button>
                </form>


                <form asp-controller="Rating" asp-action="RateMovie" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <input type="hidden" asp-for="Raiting" value="2" class="form-control" />
                        <span asp-validation-for="Raiting" class="text-danger"></span>
                    </div>
                    <button type="submit" value="Rate 2" class="btn btn-outline-success" id="rateStars" >Rate 2</button>
                </form>

                <form asp-controller="Rating" asp-action="RateMovie" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <input type="hidden" asp-for="Raiting" value="3" class="form-control" />
                        <span asp-validation-for="Raiting" class="text-danger"></span>
                    </div>
                    <button type="submit" value="Rate 3" class="btn btn-outline-success" id="rateStars" >Rate 3</button>
                </form>

                <form asp-controller="Rating" asp-action="RateMovie" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <input type="hidden" asp-for="Raiting" value="4" class="form-control" />
                        <span asp-validation-for="Raiting" class="text-danger"></span>
                    </div>
                    <button type="submit" value="Rate 4" class="btn btn-outline-success" id="rateStars" >Rate 4</button>
                </form>

                <form asp-controller="Rating" asp-action="RateMovie" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <input type="hidden" asp-for="Raiting" value="5" class="form-control" />
                        <span asp-validation-for="Raiting" class="text-danger"></span>
                    </div>
                    <button type="submit" value="Rate 5" class="btn btn-outline-success" id="rateStars" >Rate 5</button>
                </form>
            </div>
        }
    </div>