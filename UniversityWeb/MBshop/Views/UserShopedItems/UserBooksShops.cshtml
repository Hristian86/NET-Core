@model IEnumerable<OutputBooks>

@{
    ViewData["Title"] = "UserBooksShops";
}
<div class="container">

    <h1>@User.Identity.Name's shoped products</h1>

    <br />
    <p class="movieLink">
        <a asp-controller="UserShopedItems" asp-action="UserMovieShops" class="btn btn-primary btn-lg">Movie Collection</a>
    </p>
    @if (Model.Any())
    {

        <table class="table" id="tabul">
            <thead>
                <tr>
                    <th id="hide-on-mobile">
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th id="hide-on-mobile">
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th id="hide-on-mobile">
                        Rating
                    </th>
                    <th id="hide-on-mobile">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th id="hide-on-mobile">
                        Released
                    </th>
                    <th id="hide-on-mobile">
                        @Html.DisplayNameFor(model => model.Genre)
                    </th>
                    <th id="hide-on-mobile">
                        @Html.DisplayNameFor(model => model.price)
                    </th>
                    <th>
                        Product
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Picture)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td id="hide-on-mobile">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td id="hide-on-mobile">
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td id="hide-on-mobile">
                            @Html.DisplayFor(modelItem => item.Raiting)
                        </td>
                        <td id="hide-on-mobile">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td id="hide-on-mobile">
                            @Html.DisplayFor(modelItem => item.RealeseDate)
                        </td>
                        <td id="hide-on-mobile">
                            @Html.DisplayFor(modelItem => item.Genre)
                        </td>
                        <td id="hide-on-mobile">
                            @Html.DisplayFor(modelItem => item.price) $
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.LinkForPurchasedContend)*@
                            <iframe width="420" height="315"
                                    src="@item.LinkForProductContentWhenPurchase">
                            </iframe>

                        </td>
                        <td>
                            <img src="@item.Picture" id="MovieList" alt="Alternate Text" />
                            @using (Html.BeginForm("BookDetail", "BookList", new { id = item.Id }, FormMethod.Get))
                            {
                                <button type="submit" class="btn btn-outline-primary mt-3 ml-3">Details  </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <div class="wrapper bg-transparent mt-5"><h3 class="text-center pt-3">There are no products</h3></div>
    }
</div>