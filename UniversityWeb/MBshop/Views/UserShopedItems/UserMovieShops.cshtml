@model IEnumerable<MBshop.Service.OutputModels.OutputMovies>

@{
    ViewData["Title"] = "UserShops";
}

<h1>@User.Identity.Name's shoped products</h1>


<br />
<p class="bookLink">
    <a asp-controller="UserShopedItems" asp-action="UserBooksShops" class="btn btn-primary btn-lg">Book collection</a>
</p>
<table class="table" id="tabul">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Product
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.LinkForPurchasedContend)*@
                    <iframe width="420" height="315"
                            src="@item.LinkForPurchasedContend">
                    </iframe>
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Picture)*@
                    <img src="@item.Picture" class="mb-3" id="MovieList" alt="Alternate Text" />

                    @using (Html.BeginForm("MovieDetail", "MovieList", new { id = item.Id }, FormMethod.Post))
                    {
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                <input class="form-control mr-sm-2" type="hidden" name="type" value="@item.price">
                                <button type="submit" class="btn btn-outline-primary">Details </button>
                            </div>
                        </div>
                    }
                </td>
            </tr>
            
        }
    </tbody>
</table>
