    <div id="carouselExampleIndicators" class="carousel slide bg-dark" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" style="width:100%;height:700px;">
            <div class="carousel-item active">
                <img class="d-block w-100 " src="https://cdn.pixabay.com/photo/2015/03/26/09/47/sky-690293__340.jpg" alt="First slide">
            </div>

            @foreach (var product in Model)
            {

                <div class="carousel-item" id="corousel-size">
                    <div class="carousel-caption d-none d-md-block">
                        <div class="jumbotron jumbo">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h1>@product.Title</h1>
                                        <br />
                                        <h2>Price: @product.price $</h2>
                                    </div>
                                    <div class="col-md-6">
                                        <img src="@product.Picture" id="pic" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h5></h5>
                        <p><h1 class="product-rate">This product has @product.Rate rating</h1></p>
                        <p></p>
                    </div>

                </div>
            }
            <h1 class="text-light d-flex justify-content-end" id="header-content">Most popular products</h1>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</body>