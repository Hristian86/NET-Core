@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger text-center mt-5">Opps somthing went wrong</h1>
<h2 class="text-danger text-center">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p class="text-center">
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
<div class="text-center">
<a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Take me home</a>
</div>


