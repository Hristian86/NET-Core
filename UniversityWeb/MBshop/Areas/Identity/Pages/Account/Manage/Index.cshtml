@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
@*<partial name="_StatusMessage" model="Model.StatusMessage" />*@


<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username">User name</label><br />
                <input asp-for="Username" class="form-control ml-0" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Input.ChatName"></label><br />
                <input asp-for="Input.ChatName" placeholder="@Model.ChatName" class="form-control ml-0" /><br />
                <span asp-validation-for="Input.ChatName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.FirstName"></label><br />
                <input asp-for="Input.FirstName" placeholder="@Model.FirstName" class="form-control ml-0" /><br />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.LastName"></label><br />
                <input asp-for="Input.LastName" placeholder="@Model.LastName" class="form-control ml-0" /><br />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Address"></label><br />
                <input asp-for="Input.Address" placeholder="@Model.Address" class="form-control ml-0" /><br />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Avatar"></label><br />
                <input asp-for="Input.Avatar" placeholder="@Model.Avatar" class="form-control ml-0" /><br />
                <span asp-validation-for="Input.Avatar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label><br />
                <input type="text" asp-for="Input.PhoneNumber" class="form-control ml-0" /><br />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <input id="update-profile-button" type="submit" class="btn btn-primary ml-0 mt-3" value="Save" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
