@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}




<div class="wrappers fadeInDown" id="new-login-form">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            @*<img src="http://danielzawadzki.com/codepen/01/icon.svg" id="icon" alt="User Icon" />*@<h2>Register</h2>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <!-- Login Form -->
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            @* user *@
            <input type="text" id="login" class="fadeIn second" asp-for="Input.UserName" placeholder="User name">
            <span asp-validation-for="Input.UserName" class="text-danger"></span>

            <input type="text" id="login" class="fadeIn second" asp-for="Input.Email" placeholder="Email">
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            @* password *@
            <input type="password" id="password" class="fadeIn third" asp-for="Input.Password" placeholder="password">
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <input type="password" id="password" class="fadeIn third" asp-for="Input.ConfirmPassword" placeholder="Confirm password">
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>


            <div class="checkbox fadeIn third mt-1">

            </div>


            <input type="submit" class="fadeIn fourth" value="Register">
        </form>

        

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
